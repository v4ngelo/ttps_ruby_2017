      <th colspan="2"></th>
    </tr>
  </thead>

  <% @courses.each do |course| %>
    <tr>
      <td><%= course.id %></td>
      <td><%= course.anio %></td>
      <td><%= button_to "Editar", edit_course_path(course.id), :method => :get, class: "btn btn-sm btn-info" %>
