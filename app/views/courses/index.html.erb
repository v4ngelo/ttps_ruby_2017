<p id="notice"><%= notice %></p>

<h3 class="min-margin"> Cursadas </h3>
<hr/>
<div class="min-margin">
  <%= button_to "Nueva Cursada", new_course_path, :method => :get, class: "btn btn-primary min-margin right"%>
</div>

<table class="table table-striped table-sm table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>#</th>
