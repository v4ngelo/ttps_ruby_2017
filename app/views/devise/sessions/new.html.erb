<div class = "container col-md-5">
  <div class="wrapper">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h4 class="form-signin-heading text-center">Bienvenido! Por favor, ingrese sus credenciales.</h4>
      <hr class="colorgraph"><br>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo Electronico", class: "text-center form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "ContraseÃ±a", class: "text-center form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
